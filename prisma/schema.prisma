generator client {
  provider   = "prisma-client-js"
  engineType = "client"
  output     = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

/// User profile linked to Clerk authentication
model User {
  id                 String    @id @default(cuid())
  clerkId            String    @unique @map("clerk_id")
  email              String    @unique
  firstName          String?   @map("first_name")
  lastName           String?   @map("last_name")
  grade              Int?
  schoolId           String?   @map("school_id")
  onboardingComplete Boolean   @default(false) @map("onboarding_complete")
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime  @updatedAt @map("updated_at")

  bio            String?
  location       String?
  dateOfBirth    DateTime? @map("date_of_birth")
  accountType    String?   @default("high_school") @map("account_type")
  graduationYear Int?      @map("graduation_year")

  currentStreak   Int       @default(0) @map("current_streak")
  longestStreak   Int       @default(0) @map("longest_streak")
  totalActiveDays Int       @default(0) @map("total_active_days")
  lastActiveDate  DateTime? @map("last_active_date")

  assessments        Assessment[]
  savedCareers       SavedCareer[]
  chatSessions       ChatSession[]
  userSkills         UserSkill[]
  userInterests      UserInterest[]
  videoWatches       CareerVideoWatch[]
  careerEngagements  CareerEngagement[]
  questionAnswers    QuestionAnswer[]
  crosswordProgress  CrosswordProgress[]

  @@map("users")
}

/// RIASEC assessment results
model Assessment {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  type        String   @default("riasec")
  realistic   Int      @default(0)
  investigative Int    @default(0)
  artistic    Int      @default(0)
  social      Int      @default(0)
  enterprising Int     @default(0)
  conventional Int     @default(0)
  completedAt DateTime? @map("completed_at")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("assessments")
}

/// Careers saved by users for later reference
model SavedCareer {
  id           String   @id @default(cuid())
  userId       String   @map("user_id")
  occupationId String   @map("occupation_id")
  notes        String?
  createdAt    DateTime @default(now()) @map("created_at")

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  occupation Occupation @relation(fields: [occupationId], references: [id])

  @@unique([userId, occupationId])
  @@map("saved_careers")
}

/// O*NET occupation data
model Occupation {
  id          String  @id
  title       String
  description String?
  whatTheyDo  String? @map("what_they_do")
  imageUrl    String? @map("image_url")

  majorGroup String? @map("major_group")
  minorGroup String? @map("minor_group")
  category   String?
  jobZone    Int?    @map("job_zone")

  brightOutlook   Boolean @default(false) @map("bright_outlook")
  greenOccupation Boolean @default(false) @map("green_occupation")
  stemOccupation  Boolean @default(false) @map("stem_occupation")

  riasecRealistic     Float? @map("riasec_realistic")
  riasecInvestigative Float? @map("riasec_investigative")
  riasecArtistic      Float? @map("riasec_artistic")
  riasecSocial        Float? @map("riasec_social")
  riasecEnterprising  Float? @map("riasec_enterprising")
  riasecConventional  Float? @map("riasec_conventional")

  medianWage        Int?    @map("median_wage")
  medianWageHigh    Int?    @map("median_wage_high")
  wagePercentile10  Int?    @map("wage_percentile_10")
  wagePercentile90  Int?    @map("wage_percentile_90")
  totalEmployment   Int?    @map("total_employment")
  jobGrowth         String? @map("job_growth")
  projectedGrowth   Float?  @map("projected_growth")
  projectedOpenings Int?    @map("projected_openings")

  typicalEducation String? @map("typical_education")
  education        String?

  onetVersion String?   @map("onet_version")
  lastSynced  DateTime? @map("last_synced")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  savedBy      SavedCareer[]
  skills       OccupationSkill[]
  knowledge    OccupationKnowledge[]
  abilities    OccupationAbility[]
  technologies OccupationTechnology[]
  workActivities OccupationWorkActivity[]
  relatedTo    OccupationRelation[] @relation("source")
  relatedFrom  OccupationRelation[] @relation("target")

  @@index([jobZone])
  @@index([brightOutlook])
  @@index([category])
  @@index([majorGroup])
  @@map("occupations")
}

/// Skills associated with an occupation (O*NET standardized skills)
model OccupationSkill {
  id           String  @id @default(cuid())
  occupationId String  @map("occupation_id")
  elementId    String? @map("element_id")
  name         String
  type         String  @default("technical")
  importance   Float?
  level        Float?

  occupation Occupation @relation(fields: [occupationId], references: [id], onDelete: Cascade)

  @@unique([occupationId, name])
  @@index([name])
  @@map("occupation_skills")
}

/// Knowledge areas associated with an occupation
model OccupationKnowledge {
  id           String @id @default(cuid())
  occupationId String @map("occupation_id")
  elementId    String @map("element_id")
  name         String
  importance   Float?
  level        Float?

  occupation Occupation @relation(fields: [occupationId], references: [id], onDelete: Cascade)

  @@unique([occupationId, elementId])
  @@index([name])
  @@map("occupation_knowledge")
}

/// Abilities associated with an occupation
model OccupationAbility {
  id           String  @id @default(cuid())
  occupationId String  @map("occupation_id")
  elementId    String? @map("element_id")
  name         String
  importance   Float?
  level        Float?

  occupation Occupation @relation(fields: [occupationId], references: [id], onDelete: Cascade)

  @@unique([occupationId, name])
  @@index([name])
  @@map("occupation_abilities")
}

/// Technology skills and tools used in an occupation
model OccupationTechnology {
  id            String  @id @default(cuid())
  occupationId  String  @map("occupation_id")
  name          String
  hotTechnology Boolean @default(false) @map("hot_technology")
  categoryName  String? @map("category_name")

  occupation Occupation @relation(fields: [occupationId], references: [id], onDelete: Cascade)

  @@unique([occupationId, name])
  @@index([hotTechnology])
  @@map("occupation_technologies")
}

/// Work activities performed in an occupation
model OccupationWorkActivity {
  id           String @id @default(cuid())
  occupationId String @map("occupation_id")
  elementId    String @map("element_id")
  name         String
  importance   Float?
  level        Float?

  occupation Occupation @relation(fields: [occupationId], references: [id], onDelete: Cascade)

  @@unique([occupationId, elementId])
  @@map("occupation_work_activities")
}

/// Related occupations for career exploration
model OccupationRelation {
  id         String @id @default(cuid())
  sourceId   String @map("source_id")
  targetId   String @map("target_id")
  similarity Float?

  source Occupation @relation("source", fields: [sourceId], references: [id], onDelete: Cascade)
  target Occupation @relation("target", fields: [targetId], references: [id], onDelete: Cascade)

  @@unique([sourceId, targetId])
  @@map("occupation_relations")
}

/// AI chat sessions for career coaching
model ChatSession {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  title     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user     User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages ChatMessage[]

  @@map("chat_sessions")
}

/// Individual messages in a chat session
model ChatMessage {
  id        String   @id @default(cuid())
  sessionId String   @map("session_id")
  role      String
  content   String
  createdAt DateTime @default(now()) @map("created_at")

  session ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@map("chat_messages")
}

/// Master list of skills (seeded from O*NET + curated tech skills)
model Skill {
  id       String @id @default(cuid())
  name     String @unique
  category String

  userSkills UserSkill[]

  @@map("skills")
}

/// Junction table linking users to skills with proficiency
model UserSkill {
  id          String @id @default(cuid())
  userId      String @map("user_id")
  skillId     String @map("skill_id")
  proficiency Int    @default(50)

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  skill Skill @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@unique([userId, skillId])
  @@map("user_skills")
}

/// User interests (free-form text)
model UserInterest {
  id     String @id @default(cuid())
  userId String @map("user_id")
  name   String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, name])
  @@map("user_interests")
}

/// Tracks user video watch progress for career exploration
model CareerVideoWatch {
  id           String   @id @default(cuid())
  userId       String   @map("user_id")
  occupationId String   @map("occupation_id")
  videoId      String   @map("video_id")
  videoTitle   String?  @map("video_title")
  videoUrl     String?  @map("video_url")
  duration     Int?
  watchedSeconds Int    @default(0) @map("watched_seconds")
  completed    Boolean  @default(false)
  watchedAt    DateTime @default(now()) @map("watched_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, occupationId, videoId])
  @@index([userId, occupationId])
  @@map("career_video_watches")
}

/// Tracks overall user engagement with a career (page views, time spent)
model CareerEngagement {
  id           String   @id @default(cuid())
  userId       String   @map("user_id")
  occupationId String   @map("occupation_id")
  pageViews    Int      @default(0) @map("page_views")
  timeSpentSeconds Int  @default(0) @map("time_spent_seconds")
  lastViewedAt DateTime @default(now()) @map("last_viewed_at")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, occupationId])
  @@index([userId])
  @@map("career_engagements")
}

/// Question of the Day - multiple choice questions for daily engagement
model Question {
  id             String   @id @default(cuid())
  questionText   String   @map("question_text")
  option1        String
  option2        String
  option3        String
  option4        String
  correctAnswer  Int      @map("correct_answer")
  funFactHeader  String?  @map("fun_fact_header")
  funFactText    String?  @map("fun_fact_text")
  hint           String?
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  answers QuestionAnswer[]

  @@map("questions")
}

/// User answers to questions
model QuestionAnswer {
  id                   String   @id @default(cuid())
  questionId           String   @map("question_id")
  userId               String   @map("user_id")
  selectedAnswerOption Int      @map("selected_answer_option")
  isCorrect            Boolean  @default(false) @map("is_correct")
  createdAt            DateTime @default(now()) @map("created_at")
  updatedAt            DateTime @updatedAt @map("updated_at")

  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([questionId, userId])
  @@map("question_answers")
}

/// Daily crossword puzzle challenges
model Crossword {
  id           String   @id @default(cuid())
  title        String?
  rows         Int      @default(5)
  cols         Int      @default(5)
  grid         Json
  clues        Json
  hint         String?
  funFactTitle String?  @map("fun_fact_title")
  funFactText  String?  @map("fun_fact_text")
  activeDate   DateTime? @map("active_date")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  userProgress CrosswordProgress[]

  @@index([activeDate])
  @@map("crosswords")
}

/// User progress on crossword puzzles
model CrosswordProgress {
  id           String   @id @default(cuid())
  crosswordId  String   @map("crossword_id")
  userId       String   @map("user_id")
  userGrid     Json     @map("user_grid")
  hintsUsed    Int      @default(0) @map("hints_used")
  completed    Boolean  @default(false)
  completedAt  DateTime? @map("completed_at")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  crossword Crossword @relation(fields: [crosswordId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([crosswordId, userId])
  @@map("crossword_progress")
}
