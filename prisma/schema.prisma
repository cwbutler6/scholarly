generator client {
  provider   = "prisma-client-js"
  engineType = "client"
  output     = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

/// User profile linked to Clerk authentication
model User {
  id                 String    @id @default(cuid())
  clerkId            String    @unique @map("clerk_id")
  email              String    @unique
  firstName          String?   @map("first_name")
  lastName           String?   @map("last_name")
  grade              Int?
  schoolId           String?   @map("school_id")
  onboardingComplete Boolean   @default(false) @map("onboarding_complete")
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime  @updatedAt @map("updated_at")

  bio            String?
  location       String?
  dateOfBirth    DateTime? @map("date_of_birth")
  accountType    String?   @default("high_school") @map("account_type")
  graduationYear Int?      @map("graduation_year")

  assessments    Assessment[]
  savedCareers   SavedCareer[]
  chatSessions   ChatSession[]
  userSkills     UserSkill[]
  userInterests  UserInterest[]

  @@map("users")
}

/// RIASEC assessment results
model Assessment {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  type        String   @default("riasec")
  realistic   Int      @default(0)
  investigative Int    @default(0)
  artistic    Int      @default(0)
  social      Int      @default(0)
  enterprising Int     @default(0)
  conventional Int     @default(0)
  completedAt DateTime? @map("completed_at")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("assessments")
}

/// Careers saved by users for later reference
model SavedCareer {
  id           String   @id @default(cuid())
  userId       String   @map("user_id")
  occupationId String   @map("occupation_id")
  notes        String?
  createdAt    DateTime @default(now()) @map("created_at")

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  occupation Occupation @relation(fields: [occupationId], references: [id])

  @@unique([userId, occupationId])
  @@map("saved_careers")
}

/// O*NET occupation data
model Occupation {
  id              String  @id
  title           String
  description     String?
  imageUrl        String? @map("image_url")
  category        String?
  jobZone         Int?    @map("job_zone")
  brightOutlook   Boolean @default(false) @map("bright_outlook")
  greenOccupation Boolean @default(false) @map("green_occupation")
  education       String?

  riasecRealistic     Int? @map("riasec_realistic")
  riasecInvestigative Int? @map("riasec_investigative")
  riasecArtistic      Int? @map("riasec_artistic")
  riasecSocial        Int? @map("riasec_social")
  riasecEnterprising  Int? @map("riasec_enterprising")
  riasecConventional  Int? @map("riasec_conventional")

  medianWage      Int?    @map("median_wage")
  medianWageHigh  Int?    @map("median_wage_high")
  jobGrowth       String? @map("job_growth")
  totalEmployment Int?    @map("total_employment")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  savedBy   SavedCareer[]
  skills    OccupationSkill[]
  abilities OccupationAbility[]

  @@index([jobZone])
  @@index([brightOutlook])
  @@index([category])
  @@map("occupations")
}

/// Skills associated with an occupation
model OccupationSkill {
  id           String @id @default(cuid())
  occupationId String @map("occupation_id")
  name         String
  type         String @default("technical")
  importance   Int?

  occupation Occupation @relation(fields: [occupationId], references: [id], onDelete: Cascade)

  @@unique([occupationId, name])
  @@map("occupation_skills")
}

/// Abilities associated with an occupation
model OccupationAbility {
  id           String @id @default(cuid())
  occupationId String @map("occupation_id")
  name         String
  importance   Int?

  occupation Occupation @relation(fields: [occupationId], references: [id], onDelete: Cascade)

  @@unique([occupationId, name])
  @@map("occupation_abilities")
}

/// AI chat sessions for career coaching
model ChatSession {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  title     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user     User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages ChatMessage[]

  @@map("chat_sessions")
}

/// Individual messages in a chat session
model ChatMessage {
  id        String   @id @default(cuid())
  sessionId String   @map("session_id")
  role      String
  content   String
  createdAt DateTime @default(now()) @map("created_at")

  session ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@map("chat_messages")
}

/// Master list of skills (seeded from O*NET + curated tech skills)
model Skill {
  id       String @id @default(cuid())
  name     String @unique
  category String

  userSkills UserSkill[]

  @@map("skills")
}

/// Junction table linking users to skills with proficiency
model UserSkill {
  id          String @id @default(cuid())
  userId      String @map("user_id")
  skillId     String @map("skill_id")
  proficiency Int    @default(50)

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  skill Skill @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@unique([userId, skillId])
  @@map("user_skills")
}

/// User interests (free-form text)
model UserInterest {
  id     String @id @default(cuid())
  userId String @map("user_id")
  name   String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, name])
  @@map("user_interests")
}
